generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

model Course {
  id          Int     @id @default(autoincrement())
  image       String
  title       String  @unique
  description String
  content     String?
}

model Game {
  id      Int    @id @default(autoincrement())
  name    String
  player1 String
  player2 String
  result  String
  Move    Move[]
}

model Move {
  id          Int    @id @default(autoincrement())
  xCoordinate Int
  yCoordinate Int
  color       String
  gameId      Int
  game        Game   @relation(fields: [gameId], references: [id])
}
